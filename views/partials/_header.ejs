<header>
    <h1>Tiny App</h1>
    <% if (username) { %>
    <h2>Username: <%=username%></h2>
    <form method="POST" action="/logout">
        <input type="submit" value="Logout">
    </form>
    <% } else { %>
    <form method="POST" action="/login">
        <input type="text" name="username">
        <input type="submit" value="login">
    </form>
    <% } %>

</header>